extends ../includes/layout-main
block content
  main.card.m-3.p-3(role='main')
    .d-flex
      h5.animate-typing.mr-auto Welcome Back 👋🏻
      h5.show-date-time Jan 01 00:00 AM

    .row
      .col-md-3(onclick="location.href='/users';")
        .card-counter.primary
          i.bi.bi-person-check
          span.count-numbers !{data[0]}
          span.count-name Administrators
      .col-md-3(onclick="location.href='/registers';")
        .card-counter.purple
          i.bi.bi-people
          span.count-numbers !{data[1]}
          span.count-name Public Users
      .col-md-3(onclick="location.href='/cities';")
        .card-counter.success
          i.bi.bi-building
          span.count-numbers !{data[2]}
          span.count-name Cities/Regions
      .col-md-3(onclick="location.href='/townships';")
        .card-counter.info
          i.bi.bi-signpost
          span.count-numbers !{data[3]}
          span.count-name Townships

    hr
    .col-md-12
      .row
        .col-md-4.my-2
          .panel.panel-default
            .panel-heading
              h4.panel-title
            .panel-content.text-center
              canvas#teamChart.chart(height='380')
            .panel-footer.text-center
              p.pt-3 A simple Team Chart with basic settings

        .col-md-4.my-2
          .panel.panel-default
            .panel-heading
              h4.panel-title
            .panel-content.text-center
              canvas#saleChart.chart(height='380')
            .panel-footer.text-center 
              p.pt-3 A sample Sale Chart with basic settings

        .col-md-4.my-2
          .panel.panel-default
            .panel-heading
              h4.panel-title 
